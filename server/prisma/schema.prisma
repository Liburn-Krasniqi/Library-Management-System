generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  javascriptTarget = "es2022"  // this enforces ESM
  moduleFormat = "cjs" // ultra necessary
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum ReadingStatus {
  READING
  COMPLETED
  WANT_TO_READ
  DROPPED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String   // Hash
  role      Role     @default(USER)
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Book {
  id            String       @id @default(cuid())
  title         String
  author        String
  genre         String?
  readingStatus ReadingStatus @default(READING)
  description   String? 
  releaseYear   DateTime?
  price Decimal? @db.Decimal(10, 2)
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookId        Int?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  displayBook   DisplayBook? @relation(fields: [bookId], references: [id])
  
  @@index([userId])
  @@map("books")
}

model DisplayBook {
  id            Int      @id @default(autoincrement())
  title         String
  author        String
  description   String?
  genres        String?
  avgRating     Float?
  coverImage    String?
  datasetIndex  Int?     @unique  // Maps to the index in your CSV/FAISS index
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  books     Book[]
}