generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  javascriptTarget = "es2022"  // this enforces ESM
  moduleFormat = "cjs" // ultra necessary
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

enum ReadingStatus {
  READING
  COMPLETED
  WANT_TO_READ
  DROPPED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   // Hash
  role      Role     @default(USER)
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

model Book {
  id            String       @id @default(cuid())
  title         String
  author        String
  genre         String?
  readingStatus ReadingStatus @default(READING)
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  @@index([userId])
  @@map("books")
}